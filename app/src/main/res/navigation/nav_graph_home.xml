<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@id/navigation_home"
        android:name="com.takechee.qrcodereader.ui.feature.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/to_result"
            app:destination="@id/navigation_detail" />
        <action
            android:id="@+id/to_history"
            app:destination="@id/navigation_history" />
        <action
            android:id="@+id/to_capture"
            app:destination="@id/navigation_capture" />
    </fragment>

    <fragment
        android:id="@id/navigation_capture"
        android:name="com.takechee.qrcodereader.ui.feature.capture.CaptureFragment"
        tools:layout="@layout/fragment_capture" />

    <fragment
        android:id="@id/navigation_history"
        android:name="com.takechee.qrcodereader.ui.feature.history.HistoryFragment"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/to_result"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@id/navigation_detail"
        android:name="com.takechee.qrcodereader.ui.feature.detail.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

</navigation>