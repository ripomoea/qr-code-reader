<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.takechee.qrcodereader.ui.feature.detail.DetailViewContent.ShareButton.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_small">

        <include
            layout="@layout/included_detail_action"
            android:onClick="@{() -> clickListener.onShareButtonClick()}"
            app:src="@{@drawable/ic_sharearrow}"
            app:text="@{@string/home}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>