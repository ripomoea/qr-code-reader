<resources>

    <style name="Widget.QRCodeReader.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/margin_small</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.QRCodeReader.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.QRCodeReader.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">@dimen/margin_small</item>
    </style>

    <style name="Widget.QRCodeReader.OssLicenses.ActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.QRCodeReader" parent="@android:style/Widget.Material" />

    <style name="Widget.QRCodeReader.CardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
    </style>

    <!-- Settings -->
    <style name="Widget.QRCodeReader.Misc" />

    <style name="Widget.QRCodeReader.Misc.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

</resources>
