<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.takechee.qrcodereader.ui.feature.detail.DetailViewContent.ActionArea.OnActionClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_small"
        android:paddingVertical="@dimen/margin_normal"
        android:splitMotionEvents="false">

        <include
            android:id="@+id/open_intent_action"
            layout="@layout/included_detail_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> clickListener.onOpenIntentActionClick()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src="@{@drawable/ic_open_in_new}"
            app:text="@{@string/open_intent}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>