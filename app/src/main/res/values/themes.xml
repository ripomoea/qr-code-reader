<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorControlLight">@color/color_control_light</item>
        <item name="colorControlHighlight">@color/color_control_high_light</item>

        <!-- Window decor -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_navigation
        </item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>

        <!-- Widget styles -->
        <item name="toolbarStyle">@style/Widget.QRCodeReader.Toolbar</item>
        <item name="cardViewStyle">@style/Widget.QRCodeReader.CardView</item>
    </style>

    <style name="ThemeOverlay.QRReader.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darker_purple</item>
    </style>

    <style name="ThemeOverlay.QRReader.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darker_purple</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme.OssLicenses" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <!-- Window decor -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_navigation
        </item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>

        <!-- Widget styles -->
        <item name="actionBarStyle">@style/Widget.QRCodeReader.OssLicenses.ActionBar</item>
    </style>

    <style name="AppTheme.OssLicenses" parent="Base.AppTheme.OssLicenses" />

</resources>